<ul class="baybecontainer filter-bar all-categories">
  <li>
    <%= link_to "All Categories", products_path, class: "navbar-text filter-active-cat" %>
  </li>
  <% @categories.each do |category| %>
  <li>
    <%= link_to category.description,
        filt_cat_path(query: params[:query], cat: category.description),
        class: "navbar-text",
        id: category.description,
        remote: true  %>
  </li>
  <% end %>
</ul>

<ul class="baybecontainer filter-bar all-conditions mb-3 mt-3">
  <li>
  <%= link_to "All Conditions", products_path, class: "navbar-text filter-active-con" %>
  </li>
  <% @condition_groups.each do |condition| %>
  <li>
    <%= link_to condition,
        filt_con_path(query: params[:query], con: condition),
        class: "navbar-text",
        id: condition,
        remote: true  %>
  </li>
  <% end %>
</ul>
