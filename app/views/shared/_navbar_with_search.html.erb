<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top px-5 bg-w">

  <!-- BABYE LOGO -->
  <%= link_to "baybe", root_path , class: "navbar-brand" %>


  <div class="baybe-navbar w-100">
    <div class="navbar-login">
      <%= link_to "Shop", new_user_session_path, class: "nav-link text-dark" %>
      <%= link_to "Sell", new_user_session_path, class: "nav-link text-dark" %>

      <!-- RENDER LOGIN OR USERNAME WITH TOOLBAR IF SIGNED IN -->
      <% if user_signed_in? %>

        <%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

        <!-- DROPDOWN MENU -->
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to 'Edit Profile',edit_user_registration_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
        <!-- --------------------------- -->

      <% else %>

        <%= link_to "Login", new_user_session_path, class: "nav-link text-dark" %>

      <% end %>
      <!-- --------------------------- -->
    </div>

    <!-- SEARCH BAR -->
    <div class="navbar-right">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>

      <!-- RENDER CART IF SIGNED IN -->
      <% if user_signed_in? %>
      <% current_cart = current_user.carts.find_by(paid: "Pending") %>
      <%= link_to ('<i class="fas fa-baby-carriage"></i>').html_safe, cart_path(current_cart) %>
      <p>(<%= current_cart.stock_products.count %>)</p>

      <% end %>
      <!-- --------------------------- -->

    </div>
    <!-- --------------------------- -->

  </div>
</div>
