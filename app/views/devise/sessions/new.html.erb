<div class="container">
  <div class="row">
    <div class="col-xs-12 col-lg-6 offset-lg-3">
      <h2 class="text-center mr-5">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-10">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="col-10">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="col-10">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

        </div>
        <div class="form-actions text-center mr-5 mb-5">
          <%= f.button :submit, "Log in", class: "primarybtn" %>
        </div>
      <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
