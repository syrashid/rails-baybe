function updateDom() {
  // switch which link is active
  document.querySelector('.filter-active-cat').classList.remove('filter-active-cat');
  document.getElementById('<%= @cat %>').classList.add('filter-active-cat');

  // find which condition is active and swap it
  document.querySelector('.filter-active-con').classList.remove('filter-active-con');
  document.querySelector('.all-con').classList.add('filter-active-con');

  // rearrange the dom
  const cards = document.getElementById('cards-container');
  const html = '<%= j render "product_card_partial", products: @products %>';
  cards.innerHTML = html
}

updateDom()
