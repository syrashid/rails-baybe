<ul class="baybecontainer filter-bar all-categories">
  <li>
    <%= link_to "All Categories", sell_products_path, class: "navbar-text filter-active-cat" %>
  </li>
  <% @categories.each do |category| %>
  <li>
    <%= link_to category.description,
        filt_cat_path(query: params[:query], cat: category.description),
        class: "navbar-text",
        id: category.description,
        remote: true  %>
  </li>
  <% end %>
</ul>
