<div class="chadainer">
  <h4>YOUR ORDERS</h4>
  <% @activecarts.order(id: :desc).each do |cart| %>
    <div class="order">
      <!-- ORDER TITLE, STATUS AND PRICE -->
      <div class="order-info">
        <div class="order-title-info">
          <p>ORDER NÂº: <%= cart.updated_at.strftime("%Y%m%dT%H%M") %>N<%= cart.id %> - </p>
          <p class="status"> <%= cart.paid %></p>
        </div>

        <div class="order-title-info">
         <% cart.cart_options.each do |option| %>
            <% if option.content %>
              <a class="status" data-container="body" data-toggle="popover" data-placement="bottom" data-content="<%= option.content %>">
                Delivery Address
              </a>
            <% end %>
          <% end %>
        </div>

        <div class="order-title-info">
          <p><%= cart.total_price %> EUR</p>
        </div>
      </div>
      <!------------------------>
        <% cart.stock_products.each do |stockProd| %>
          <!-- ORDER STOCK PRODUCTS -->
          <div class="baybe-list-card">
              <div class="baybe-list">

                <%# if stockProd.photos.any? %>
                  <%= cl_image_tag stockProd.product.photo %>
                <%# end %>
                <p><%= stockProd.product.name %></p>
              </div>
              <div class="baybe-list">
                <p><%= humanized_money((stockProd.product.price * stockProd.condition.buy_ratio).round(2)) %> EUR</p>
              </div>
          </div>
          <!------------------------>
        <% end %>
      </div>
      <hr>
  <% end %>
</div>
