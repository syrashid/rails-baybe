<div class="baybecontainer filter-bar all-categories">
  <%= link_to "All Categories",
      products_path,
      class: "navbar-text filter-active-cat" %>
  <% @categories.each do |category| %>
    <%= link_to category.description,
        filt_cat_path(query: params[:query], cat: category.description),
        class: "navbar-text",
        id: category.description,
        remote: true  %>
  <% end %>
</div>

<div class="baybecontainer filter-bar all-conditions">
  <%= link_to "All Conditions",
      products_path,
      class: "navbar-text filter-active-con" %>
  <% @condition_groups.each do |condition| %>
    <%= link_to condition,
        filt_con_path(query: params[:query], con: condition),
        class: "navbar-text",
        id: condition,
        remote: true  %>
  <% end %>
</div>
