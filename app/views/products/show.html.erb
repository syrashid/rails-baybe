        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown button
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">0 - 3</a>
          <a class="dropdown-item" href="#">3 - 6</a>
          <a class="dropdown-item" href="#">6 -9</a>
        </div>
      </p>
    </div>

    <div class="condition-name d-flex">
      <p class="title">Condition</p>
      <div class="dropdown mr-5">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown button
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">New</a>
          <a class="dropdown-item" href="#">Old</a>
          <a class="dropdown-item" href="#">Like New</a>
        </div>
      </div>
    </div>

    <div class="stock-produc-color d-flex">
      <p class="title">Color</p>
      <div class="dropdown mr-5">
