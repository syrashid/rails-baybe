<div class="nicontainer">
  <h4>YOUR ORDERS</h4>
  <% @carts.order(id: :desc).active.each do |cart| %>
    <div class="order">
      <!-- ORDER TITLE, STATUS AND PRICE -->
      <div class="order-title">
        <div class="order-title">
          <p>ORDER NÂº: <%= cart.updated_at.strftime("%Y%m%dT%H%M") %>N<%= cart.id %> - </p>
          <p class="status"> <%= cart.paid %></p>
        </div>

        <p class="nav-link text-dark" data-container="body" data-toggle="popover" data-placement="bottom" data-content="Vivamus sagittis lacus vel augue laoreet rutrum faucibus."> Delivery Address
        </p>

        <p><%= cart.total_price %> EUR</p>
      </div>
      <!------------------------>

       <% cart.cart_options.each do |option| %>
          <% if option.content %>
            <p><strong>Address:</strong> <%= option.content %></p>
          <% end %>

      <% end %>
        <% cart.stock_products.each do |stockProd| %>
          <!-- ORDER STOCK PRODUCTS -->
          <div class="baybe-list-card">
              <div class="baybe-list">

                <%# if stockProd.photos.any? %>
                  <%= cl_image_tag stockProd.product.photo %>
                <%# end %>




                <p><%= stockProd.product.name %></p>
              </div>
              <div class="baybe-list">
                <p><%= (stockProd.product.price * stockProd.condition.buy_ratio).round(2) %> EUR</p>
              </div>
          </div>
          <!------------------------>
        <% end %>
      </div>
  <% end %>
</div>
