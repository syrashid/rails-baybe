<div class="d-flex mt-5">
  <!-- PRODUCT CAROUSEL -->
  <div class="baybe-card baybe-carousel-card">
    <i class="fas fa-chevron-right"></i>
    <i class="fas fa-chevron-left"></i>
    <img src="https://static2.mumzworld.com/media/catalog/product/cache/6/image/9df78eab33525d08d6e5fb8d27136e95/p/d/pdt-k6-4.jpg" alt="...">
    <p class="fixed-brand">Baby Trend TS27760</p>
  </div>
  <!-- --------------- -->

  <!-- STOCK PRODUCT DETAILS -->
  <div class="details mt-5">
    <div class="product-name d-flex">
      <p class="title">Product Name</p>
      <p class="detail"><%= @product.name %></p>
    </div>

    <div class="product-price d-flex">
      <p class="title">price</p>
      <p class="detail"><%= @product.price %> â‚¬</p>
    </div>

    <div class="stock-product-size d-flex">
